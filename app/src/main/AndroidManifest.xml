<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.shefalipc.vitbank" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />
    <uses-feature
        android:name="android.software.leanback"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".signup"
            android:label="@string/title_activity_signup" >
        </activity>
        <activity
            android:name=".login"
            android:label="@string/title_activity_login" />
        <activity
            android:name=".loggedin"
            android:label="@string/title_activity_loggedin" >
        </activity>
        <activity
            android:name=".aboutus"
            android:label="@string/title_activity_aboutus" >
        </activity>
        <activity
            android:name=".notifications"
            android:label="@string/title_activity_notifications" >
        </activity>
        <activity
            android:name=".util.rowview"
            android:label="@string/title_activity_rowview" >
        </activity>
        <activity
            android:name=".util.headerview"
            android:label="@string/title_activity_headerview" >
        </activity>
        <activity
            android:name=".scse"
            android:label="@string/title_activity_scse" >
        </activity>
        <activity
            android:name=".site"
            android:label="@string/title_activity_site" >
        </activity>
    </application>

</manifest>
